{
  "name": "flow",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.1",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-transform-react-jsx": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@types/fs-extra": "^8.1.0",
    "@types/node": "^14.14.6",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "concurrently": "^5.1.0",
    "eslint": "^7.11.0",
    "eslint-config-honeyport": "https://github.com/honeyport/eslint-config-honeyport.git",
    "isdev": "^1.0.1",
    "lerna": "^3.21.0",
    "nodemon": "^2.0.3",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.2"
  },
  "scripts": {
    "core": "yarn workspace core",
    "frontend": "yarn workspace frontend",
    "flow-components": "yarn workspace flow-components",
    "flow-nodes": "yarn workspace flow-nodes",
    "flow-cli": "yarn workspace flow-cli",
    "flow": "./packages/flow-cli/bin/run",
    "utils": "yarn workspace utils",
    "clean": "yarn clean-dist && rimraf node_modules && lerna clean",
    "clean-dist": "lerna exec -- rimraf dist tsconfig.tsbuildinfo",
    "dev": "lerna run develop --parallel --scope utils --scope core --scope flow-nodes --scope flow-cli --scope flow-components",
    "test": "yarn flow-cli test"
  }
}
