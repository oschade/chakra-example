{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
      "module": "es6",
      "target": "esnext",
      "jsx": "react",
      "lib": ["dom", "esnext"],
      "strict": true,
      "composite": true,
      "noEmit": false,
      "noEmitOnError": false,
      "allowSyntheticDefaultImports" : true,
      "esModuleInterop" : true,
      "isolatedModules": true,
      "noUnusedLocals": false,
      "allowJs": true,
      "baseUrl": "."
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": ["node_modules", "public", ".cache"],
  "references": [
      {
          "path": "../components",
      }
  ]
}